//output:index.html

doctype
html
	title 5adiyah
	link(rel="stylesheet", href="css/normalize.css")
	link(rel="stylesheet", href="css/skeleton.css")
	link(rel="stylesheet", href="css/styles.css")
	link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,300' rel="stylesheet" type="text/css")
	script(src="jquery-1.12.0.js")
	script(src="scripts.js")
	body

	.maincontent
		.whitebox
			.topbar
				p . . .
			.accountbalance.center
				img(src="piggypig.png")
				h3.center Account Balance for: #[span#customername ]
				p.center.balance #[span#balanceamount ]
			.container
				form#new-customer.center
					.row.name
						label.two.columns(for="new-first-name") First Name 
						input.ten.columns(type="text", class="form-control", id="new-first-name")
					.row.name
						label.two.columns(for="new-last-name") Last Name
						input.ten.columns(type="text", class="form-control", id="new-last-name")
					.row.moneyamout
						label.two.columns(for="moneyamount") Amount of $
						input.ten.columns(type="number", class="form-control", id="moneyamount")
				
		
					.row.transactions
						button.button.four.columns(type="submit", id="deposit") Deposit
						button.button.four.columns(type="submit", id="withdraw") Withdraw
						button.button.four.columns(type="submit", id="newaccount") New Account
						
					.row.submit
						.empty.four.columns #[&nbsp]
						button.button.four.columns(type="submit", id="#submit") Deposit
						.empty.four.columns #[&nbsp]
				hr
					
